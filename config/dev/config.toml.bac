# ---------------------------------------------------------------
# Hugo 引擎的基础配置
# ---------------------------------------------------------------

baseURL = "https://www.direct-a.cn"
title = "Direct-A日志输出"
theme = "hugo-theme-next"
defaultContentLanguage = "zh-cn"
languageCode = "zh-CN"
hasCJKLanguage = true
pagination.pagerSize = 10
enableEmoji = true
enableRobotsTXT = true

# 让 Makedown 文档支持 HTML 语法，高亮，文章目录等功能
[markup.goldmark.renderer]
unsafe = true

[markup.highlight]
anchorLineNos = true
codeFences = true
guessSyntax = true
hl_Lines = ""
hl_inline = false
lineAnchors = ""
lineNoStart = 1
lineNos = false
lineNumbersInTable = false
noClasses = true
noHl = false
# 高亮代码的样式名称，可选：monokai | emacs | api | dracula | friendly
# 更多的样式：https://xyproto.github.io/splash/docs/all.html
style = "monokai"
tabWidth = 2

[markup.tableOfContents]
startLevel = 2
endLevel = 4

[sitemap]
filename = "sitemap.xml"
changefreq = "weekly"
priority = 0.5

[outputFormats.RSS]
baseName = "rss"

[outputFormats.LocalIndexes]
mediaType = "application/xml"
baseName = "searchindexes"
isPlainText = true
notAlternative = true

[outputFormats.AlgoliaIndexes]
mediaType = "application/json"
baseName = "algolia"
isPlainText = true
notAlternative = true

[outputs]
home = [ "HTML", "RSS", "AlgoliaIndexes" ]

[minify]
minifyOutput = true

[[menus.main]]
identifier = "home"
name = "首页"
pageref = "/"
pre = "home"
weight = 1
[[menus.main]]
identifier = "about"
name = "关于"
pageref = "/about.html"
pre = "user"
weight = 2
[[menus.main]]
identifier = "archives"
name = "归档"
pageref = "/archives"
pre = "archive"
weight = 3
[[menus.main]]
identifier = "commonweal"
name = "公益 404"
url = "/404.html"
pre = "heartbeat"
weight = 4


